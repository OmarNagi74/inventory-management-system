<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.SplitPane?>

<SplitPane fx:id="rootSplit" orientation="VERTICAL" dividerPositions="0.08"
           xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="javafxapplication1.CustomerHomeController">
    <items>
        <AnchorPane minHeight="20.0" prefHeight="20.0">
            <children>
                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" alignment="CENTER_LEFT" spacing="15">
                    <children>
                        <Label fx:id="welcomeLabel" text="Welcome back" 
                               onMouseClicked="#openProfile" style="-fx-cursor: hand;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <ToggleButton fx:id="darkModeToggle" text="ðŸŒ™ Dark" onAction="#toggleDarkMode"/>
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <TabPane fx:id="customerTabs" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- PRODUCTS TAB -->
                <Tab fx:id="tabProducts" text="Products">
                    <content>
                        <AnchorPane>
                            <children>
                                <HBox AnchorPane.topAnchor="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" spacing="20" alignment="CENTER_LEFT">
                                    <children>
                                        <TextField fx:id="searchField" prefWidth="380.0" promptText="Search by name or description" styleClass="search-field"/>
                                        <ComboBox fx:id="categoryFilter" prefWidth="200.0" promptText="All categories"/>
                                    </children>
                                </HBox>
                                <TableView fx:id="productsTable" 
                                           AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="20.0" 
                                           AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
                                    <columns>
                                        <TableColumn fx:id="pColName" text="Name"/>
                                        <TableColumn fx:id="pColCat" text="Category"/>
                                        <TableColumn fx:id="pColPrice" text="Price"/>
                                        <TableColumn fx:id="pColQty" text="Quantity"/>
                                        <TableColumn fx:id="pColDesc" text="Description"/>
                                        <TableColumn fx:id="pColAdd" text="Add to Cart"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- CART TAB -->
                <Tab fx:id="tabCart" text="Cart">
                    <content>
                        <AnchorPane>
                            <children>
                                <TableView fx:id="cartTable" 
                                           AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
                                           AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="60.0">
                                    <columns>
                                        <TableColumn fx:id="cColName" text="Product"/>
                                        <TableColumn fx:id="cColPrice" text="Price"/>
                                        <TableColumn fx:id="cColQty" text="Quantity"/>
                                        <TableColumn fx:id="cColTotal" text="Total"/>
                                        <TableColumn fx:id="cColDesc" text="Description"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="15.0" spacing="20.0" alignment="CENTER_RIGHT">
                                    <children>
                                        <Label fx:id="cartTotalLabel" text="Total: $0.00" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                                        <Button fx:id="orderBtn" onAction="#placeOrder" prefHeight="35.0" prefWidth="150.0" text="Place Order" />
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- ORDERS TAB -->
                <Tab fx:id="tabOrders" text="Orders">
                    <content>
                        <AnchorPane>
                            <children>
                                <TableView fx:id="ordersTable" 
                                           AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
                                           AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="60.0">
                                    <columns>
                                        <TableColumn fx:id="oColId" text="ID"/>
                                        <TableColumn fx:id="oColDate" text="Date"/>
                                        <TableColumn fx:id="oColStatus" text="Status"/>
                                        <TableColumn fx:id="oColTotal" text="Total"/>
                                        <TableColumn fx:id="oColDetails" text="Order Details"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="15.0" spacing="15.0" alignment="CENTER_RIGHT">
                                    <children>
                                        <Button prefHeight="35.0" prefWidth="120.0" text="Refresh" onAction="#handleRefreshOrders"/>
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </items>
</SplitPane>