<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<SplitPane fx:id="rootSplit" dividerPositions="0.08" orientation="VERTICAL" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication1.AdminHomeController">
    <items>
        <AnchorPane minHeight="20.0" prefHeight="35.0" prefWidth="682.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0">
                    <children>
                        <Label fx:id="welcomeLabel" onMouseClicked="#openProfile" style="-fx-cursor: hand;" text="Welcome back" />
                        <Region HBox.hgrow="ALWAYS" />
                        <ToggleButton fx:id="darkModeToggle" onAction="#toggleDarkMode" text="ðŸŒ™ Dark" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <AnchorPane>
            <children>
                <TableView fx:id="usersTable" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                    <columns>
                        <TableColumn fx:id="uColId" text="ID" />
                        <TableColumn fx:id="uColUsername" text="Username" />
                        <TableColumn fx:id="uColRole" text="Role" />
                        <TableColumn fx:id="uColAddress" text="Address" />
                        <TableColumn fx:id="uColEmail" text="Email" />
                        <TableColumn fx:id="uColPhone" text="Phone" />
                        <TableColumn fx:id="uColChangeRole" text="Change Role" />
                        <TableColumn fx:id="uColDelete" text="Delete" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
                    <children>
                        <Button onAction="#openAddUserForm" prefHeight="35.0" prefWidth="120.0" text="Add User" />
                        <Button onAction="#handleRefreshUsers" prefHeight="35.0" prefWidth="120.0" text="Refresh" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </items>
</SplitPane>
