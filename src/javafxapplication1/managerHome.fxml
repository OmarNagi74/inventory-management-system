<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.chart.*?>

<SplitPane fx:id="rootSplit" orientation="VERTICAL" dividerPositions="0.08"
           xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="javafxapplication1.ManagerHomeController">
    <items>
        <AnchorPane minHeight="20.0" prefHeight="20.0">
            <children>
                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" alignment="CENTER_LEFT" spacing="15">
                    <children>
                        <Label fx:id="welcomeLabel" text="Welcome back" 
                               onMouseClicked="#openProfile" style="-fx-cursor: hand;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <ToggleButton fx:id="darkModeToggle" text="ðŸŒ™ Dark" onAction="#toggleDarkMode"/>
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- PURCHASE ORDERS TAB -->
                <Tab fx:id="ordersTab" text="Purchase Orders">
                    <content>
                        <AnchorPane>
                            <children>
                                <TableView fx:id="purchaseTable" 
                                           AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
                                           AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="60.0">
                                    <columns>
                                        <TableColumn fx:id="colId" text="ID" />
                                        <TableColumn fx:id="colDate" text="Date" />
                                        <TableColumn fx:id="colStatus" text="Status" />
                                        <TableColumn fx:id="colTotal" text="Total" />
                                        <TableColumn fx:id="colSupplier" text="Supplier" />
                                        <TableColumn fx:id="colDetails" text="Details" />
                                        <TableColumn fx:id="colEdit" text="Edit" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="15.0" spacing="15.0" alignment="CENTER_RIGHT">
                                    <children>
                                        <Button fx:id="btnRefresh" onAction="#handleRefresh" prefHeight="35.0" prefWidth="120.0" text="Refresh" />
                                        <Button onAction="#openOrderForm" prefHeight="35.0" prefWidth="120.0" text="New Order" />
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- PRODUCTS TAB -->
                <Tab fx:id="productsTab" text="Products">
                    <content>
                        <AnchorPane>
                            <children>
                                <TableView fx:id="productsTable" 
                                           AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
                                           AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="60.0">
                                    <columns>
                                        <TableColumn fx:id="pColId" text="ID"/>
                                        <TableColumn fx:id="pColName" text="Name"/>
                                        <TableColumn fx:id="pColCat" text="Category"/>
                                        <TableColumn fx:id="pColPrice" text="Price"/>
                                        <TableColumn fx:id="pColStock" text="Stock"/>
                                        <TableColumn fx:id="pColReorder" text="Reorder"/>
                                        <TableColumn fx:id="pColDesc" text="Description"/>
                                        <TableColumn fx:id="pColAction" text="Adjust"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="15.0" spacing="15.0" alignment="CENTER_RIGHT">
                                    <children>
                                        <Button onAction="#openAddProductForm" prefHeight="35.0" prefWidth="120.0" text="Add Product"/>
                                        <Button onAction="#handleRefreshProducts" prefHeight="35.0" prefWidth="120.0" text="Refresh"/>
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- SUPPLIERS TAB -->
                <Tab fx:id="suppliersTab" text="Suppliers">
                    <content>
                        <AnchorPane>
                            <children>
                                <TableView fx:id="suppliersTable" 
                                           AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
                                           AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="60.0">
                                    <columns>
                                        <TableColumn fx:id="sColId" text="ID"/>
                                        <TableColumn fx:id="sColName" text="Name"/>
                                        <TableColumn fx:id="sColEmail" text="Email"/>
                                        <TableColumn fx:id="sColPhone" text="Phone"/>
                                        <TableColumn fx:id="sColEdit" text="Edit"/>
                                        <TableColumn fx:id="sColDelete" text="Delete"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="15.0" spacing="15.0" alignment="CENTER_RIGHT">
                                    <children>
                                        <Button onAction="#openAddSupplierForm" prefHeight="35.0" prefWidth="120.0" text="Add Supplier"/>
                                        <Button onAction="#handleRefreshSuppliers" prefHeight="35.0" prefWidth="120.0" text="Refresh"/>
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- NOTIFICATIONS TAB -->
                <Tab text="Notifications">
                    <content>
                        <AnchorPane>
                            <children>
                                <TableView fx:id="notifTable" 
                                           AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
                                           AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="60.0">
                                    <columns>
                                        <TableColumn fx:id="nColId" text="ID"/>
                                        <TableColumn fx:id="nColDate" text="Date"/>
                                        <TableColumn fx:id="nColMsg" text="Message"/>
                                        <TableColumn fx:id="nColProduct" text="Product"/>
                                        <TableColumn fx:id="nColStatus" text="Status"/>
                                        <TableColumn fx:id="nColDetails" text="Details"/>
                                        <TableColumn fx:id="nColClose" text="Close"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="15.0" spacing="15.0" alignment="CENTER_RIGHT">
                                    <children>
                                        <Button onAction="#handleRefreshNotifs" prefHeight="35.0" prefWidth="120.0" text="Refresh"/>
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- REPORTS TAB -->
                <Tab fx:id="reportsTab" text="Reports">
                    <content>
                        <AnchorPane>
                            <children>
                                <BarChart fx:id="ordersChart" 
                                          AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" 
                                          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="60.0">
                                    <xAxis>
                                        <CategoryAxis fx:id="ordersChartXAxis" label="Month" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="ordersChartYAxis" label="Total Amount" />
                                    </yAxis>
                                </BarChart>
                                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="15.0" spacing="15.0" alignment="CENTER_LEFT">
                                    <children>
                                        <ComboBox fx:id="yearCombo" prefHeight="35.0" prefWidth="120.0" promptText="Year" />
                                        <Button fx:id="btnMonthlyView" onAction="#handleMonthlyView" prefHeight="35.0" prefWidth="100.0" text="Monthly" />
                                        <Button fx:id="btnYearlyView" onAction="#handleYearlyView" prefHeight="35.0" prefWidth="100.0" text="Yearly" />
                                        <Button onAction="#handleRefreshReports" prefHeight="35.0" prefWidth="100.0" text="Refresh"/>
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </items>
</SplitPane>