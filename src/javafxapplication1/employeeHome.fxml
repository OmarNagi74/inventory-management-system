<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.SplitPane?>

<SplitPane fx:id="rootSplit" orientation="VERTICAL" dividerPositions="0.08"
           xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="javafxapplication1.EmployeeHomeController">
    <items>
        <AnchorPane minHeight="20.0" prefHeight="20.0">
            <children>
                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" alignment="CENTER_LEFT" spacing="15">
                    <children>
                        <Label fx:id="welcomeLabel" text="Welcome back" 
                               onMouseClicked="#openProfile" style="-fx-cursor: hand;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <ToggleButton fx:id="darkModeToggle" text="ðŸŒ™ Dark" onAction="#toggleDarkMode"/>
                    </children>
                </HBox>
            </children>
        </AnchorPane>

        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- ORDERS TAB -->
                <Tab fx:id="tabOrders" text="Orders">
                    <content>
                        <AnchorPane>
                            <children>
                                <TextField fx:id="orderSearchFieldE" 
                                           AnchorPane.topAnchor="15.0" AnchorPane.leftAnchor="20.0"
                                           prefWidth="380.0" promptText="Search by order id or customer username" styleClass="search-field"/>
                                <TableView fx:id="empOrdersTable" 
                                           AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="20.0" 
                                           AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="60.0">
                                    <columns>
                                        <TableColumn fx:id="oColIdE" text="ID" />
                                        <TableColumn fx:id="oColDateE" text="Date" />
                                        <TableColumn fx:id="oColStatusE" text="Status" />
                                        <TableColumn fx:id="oColTotalE" text="Total" />
                                        <TableColumn fx:id="oColEditStatus" text="Edit Status" />
                                        <TableColumn fx:id="oColDetailsE" text="Order Details" />
                                        <TableColumn fx:id="oColCustomerE" text="Customer" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="15.0" spacing="15.0" alignment="CENTER_RIGHT">
                                    <children>
                                        <Button onAction="#handleRefreshOrders" prefHeight="35.0" prefWidth="120.0" text="Refresh" />
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- PRODUCTS TAB -->
                <Tab fx:id="tabProducts" text="Products">
                    <content>
                        <AnchorPane>
                            <children>
                                <HBox AnchorPane.topAnchor="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" spacing="20" alignment="CENTER_LEFT">
                                    <children>
                                        <TextField fx:id="searchFieldE" prefWidth="320.0" promptText="Search by name or description" styleClass="search-field"/>
                                        <ComboBox fx:id="categoryFilterE" prefWidth="200.0" promptText="All categories" />
                                    </children>
                                </HBox>
                                <TableView fx:id="empProductsTable" 
                                           AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="20.0" 
                                           AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="60.0">
                                    <columns>
                                        <TableColumn fx:id="pColNameE" text="Name" />
                                        <TableColumn fx:id="pColCatE" text="Category" />
                                        <TableColumn fx:id="pColPriceE" text="Price" />
                                        <TableColumn fx:id="pColQtyE" text="Quantity" />
                                        <TableColumn fx:id="pColDescE" text="Description" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <HBox AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="15.0" spacing="15.0" alignment="CENTER_RIGHT">
                                    <children>
                                        <Button onAction="#handleRefreshProducts" prefHeight="35.0" prefWidth="120.0" text="Refresh" />
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </items>
</SplitPane>